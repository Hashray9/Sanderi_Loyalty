{
  "expo": {
    "name": "Sanderi Loyalty",
    "slug": "sanderi-loyalty",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "sanderi-loyalty",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.sanderi.loyalty",
      "infoPlist": {
        "NFCReaderUsageDescription": "This app uses NFC to read loyalty cards",
        "NSFaceIDUsageDescription": "Use Face ID to securely log in"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.sanderi.loyalty",
      "permissions": [
        "android.permission.NFC",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-local-authentication",
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "This app uses NFC to read loyalty cards"
        }
      ],
      "expo-sqlite"
    ],
    "jsEngine": "hermes",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "apiUrl": "http://172.20.10.2:3000",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "6d974812-bd54-4df9-9a99-b864dd5cc5db"
      }
    },
    "owner": "hashary"
  }
}
